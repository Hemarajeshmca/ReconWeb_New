<body class="hold-transition skin-blue sidebar-mini fixed">
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card-body" style="margin-top:-12px;height: 84%;">
                <form method="post" class="form-horizontal" id="form" enctype="multipart/form-data">
                    <div class="row" style="margin-top: -18px;margin-bottom: 10px;">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-4">
                                    <label for="organization" class="form-label">Dataset Code</label>
                                    <input class="form-control" type="text" name="coursedesc" id="coursedesc" value="" disabled>
                                </div>
                                <div class="col-sm-4">
                                    <label for="organization" class="form-label">Mode</label>
                                    <input class="form-control" type="text" name="coursedesc" id="coursedesc" value="Create" disabled>
                                </div>
                                <div class="col-sm-4">
                                    <label for="organization" class="form-label">Status</label><br>
                                    <input class="form-control" type="text" name="coursedesc" id="coursedesc" value="Active" disabled>
                                   @* <select id="mode" class="form-select form-control">
                                        <option value="A">Active</option>
                                        <option value="I">InActive</option>
                                    </select>*@
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-5">
                        </div>
                        <div class="col-sm-1" style="margin-top:20px;">
                            <center>
                                <a href="../DataSet/DataSetList"><img style="cursor:pointer;" src="~/Content/images/toplist.png"></a>&nbsp;&nbsp;&nbsp;&nbsp;
                            </center>
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px;">
                        <div class="col-sm-4">
                            <label class="form-label" for="subvertical">Dataset Name&nbsp;<span style="font-size: 12px;color: red;font-weight: bold;">*</span></label>
                            @Html.TextBox("DatasetName", "", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-4">
                            <label class="form-label" for="subvertical">Category&nbsp;<span style="font-size: 12px;color: red;font-weight: bold;">*</span></label>
                            <select id="mode" class="form-select form-control">
                                <option value="I">Bank Statement</option>
                                <option value="I">Ledger</option>
                                <option value="I">Dump</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <label class="form-label" for="subvertical">Clone Dataset&nbsp;</label>
                            <select id="mode" class="form-select form-control">
                                <option value="I">Hdfc Bank- 123456</option>
                                <option value="I">Invoice-Flexi</option>
                                <option value="I">Hdfc Ledger-00234123</option>
                                <option value="I">GRN-Flexi</option>
                            </select>
                        </div>
                        <div class="col-sm-2" style="margin-top:30px">
                            <button type="submit" class="btn btn-sm btn-success me-2" style="background: #38b55a;border-color: #38b55a;width:40%">Clone</button>&nbsp;&nbsp;&nbsp;
                        </div>
                      
                    </div>
                   
                   
                    <div class="row" style="margin-top:10px;">
                        <div class="table-responsive text-nowrap">                           
                            <i data-bs-toggle="modal" data-bs-target="#newdebit" class="fa fa-plus cursor-pointer" aria-hidden="true" style="color:green"></i>
                            <table class="table table-bordered table-sm">
                                <thead style="background: #c1c1c1;">
                                    <tr class="text-nowrap">
                                        <th style="width: 50px;">Action</th>
                                        <th style="width: 50px;">Sl no</th>
                                        <th>Dataset Field</th>                                        
                                        <th>Field Type</th>
                                        <th>Field Length</th>
                                        <th>Mandatory</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr style="height:25px;">
                                        <td align="center"><i data-bs-toggle="modal" data-bs-target="#newdebit" class="fa fa-pencil" aria-hidden="true" style="font-size: 12px;color: #5490ff;"></i></a>&nbsp;&nbsp;&nbsp;<a href="#"><i class="fa fa-eye" aria-hidden="true" style="color:brown"></i></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                    <tr style="height:25px;">
                                        <td align="center"><i data-bs-toggle="modal" data-bs-target="#newdebit" class="fa fa-pencil" aria-hidden="true" style="font-size: 12px;color: #5490ff;"></i></a>&nbsp;&nbsp;&nbsp;<a href="#"><i class="fa fa-eye" aria-hidden="true" style="color:brown"></i></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>                                   
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="row" style="padding-bottom:8px;padding-top:8px;padding-left:10px;padding-right:10px">
                        <div class="col-sm-4">
                        </div>
                        <div class="col-sm-4" style="margin-top:2%;">
                            <button type="submit" class="btn btn-sm btn-success me-2" style="background: #38b55a;border-color: #38b55a;width:40%">Save</button>&nbsp;&nbsp;&nbsp;
                            <a href="../DataSet/DataSetList" class="btn btn-sm btn-success me-2" style="background: red;border-color: red;width:40%;cursor:pointer;">Cancel</a>
                        </div>
                        <div class="col-sm-4">
                        </div>
                    </div>
                    
                    <div class="modal fade" id="newdebit" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                </div>
                                <div class="modal-body" style="margin-top: -26px;">
                                    <div class="row">
                                        <div class="col-sm-4">
                                        </div>
                                        <div class="col-sm-4">
                                            <h4 style="font-size: 15px;text-align: center;color: #1a9950;font-weight: 600;">Dataset Mapping</h4>
                                        </div>
                                        <div class="col-sm-4">
                                            <i class="bx bx-x cursor-pointer" data-bs-dismiss="modal" style="color: #000000;float:right"></i>
                                        </div>
                                    </div>
                                    <hr style="margin-top:-1px; width:100%;">
                                    <div class="container">
                                        <div class="row" style="padding-bottom:5px;margin-top:5px;padding-left:30px;padding-right:5px">
                                            <div class="col-sm-4">
                                                <label for="" class="form-label">Dataset Field</label>
                                                <input class="form-control" id="AccountNo" name="AccountNo" type="text" value="" data-bind="value:AccountNo" style="width:92%;">
                                            </div>
                                           
                                            <div class="col-sm-4">
                                                <label for="" class="form-label">Field Type&nbsp;</label>
                                                <select id="FieldType" class="form-select form-control">
                                                    <option value="Text">Text</option>
                                                    <option value="Number">Number</option>
                                                    <option value="Number">Date</option>
                                                </select>
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="" class="form-label">Field Length&nbsp;</label>
                                                <input class="form-control" id="AccountName" name="AccountName" type="text" value="" data-bind="value:Field Length" style=" width:92%;">
                                            </div>
                                        </div>
                                        <div class="row" style="padding-bottom:8px;padding-top:8px;padding-left:30px;padding-right:5px">
                                            <div class="col-sm-4">
                                                <label for="" class="form-label">Mandatory&nbsp;</label>
                                                <div style="margin-left:2px;margin-top:5px">
                                                    <input type="radio" id="mandatory" name="mandatory" value="Y" >&nbsp;&nbsp;Yes&nbsp;
                                                    <input type="radio" id="mandatory" style="margin-left: 10px;" name="mandatory" checked value="N">&nbsp;&nbsp;No&nbsp;
                                                </div>
                                            </div>
                                           @* <div class="col-sm-4">
                                                <label for="" class="form-label">Status&nbsp;</label>
                                                <div style="margin-left:2px;margin-top:5px">
                                                    <input type="radio" id="Status" name="Status" value="Y" checked>&nbsp;&nbsp;Active&nbsp;
                                                    <input type="radio" id="Status" style="margin-left: 10px;" name="Status" value="N">&nbsp;&nbsp;InActive&nbsp;
                                                </div>
                                            </div>*@
                                        </div>
                                    </div>
                                    <div class="col-sm-4" style="margin-top:30px;float: right;">
                                        <center><button type="submit" class="btn btn-sm btn-success me-2" style="background: #38b55a;border-color: #38b55a;width:40%">Save</button>&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-sm btn-success me-2" data-bs-dismiss="modal" style="background: red;border-color: red;width:40%" onclick="rr1()">Cancel</button></center>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
